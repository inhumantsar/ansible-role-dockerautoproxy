version: "3.3"

services:
    proxy:
        image: jwilder/nginx-proxy:{{ nginx_version }}
        ports:
            - 80:80
        networks:
            - proxy_net
        volumes:
            - /var/run/docker.sock:/tmp/docker.sock:ro
{% if dockerautoproxy_config_path is not none %}
            - "{{ dockerautoproxy_config_path }}:/etc/nginx/conf.d"
{% endif %}
        deploy:
            placement:
                constraints:
                    - node.role == manager

networks:
    proxy_net:
        driver: overlay
